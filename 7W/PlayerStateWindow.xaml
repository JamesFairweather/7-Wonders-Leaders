<UserControl x:Class="SevenWonders.PlayerStateWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SevenWonders"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="300">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Bottom">
                        <StackPanel x:Name="CommerceStructures" Orientation="Vertical" VerticalAlignment="Bottom"></StackPanel>
                        <StackPanel x:Name="GoodsStructures" Orientation="Vertical" VerticalAlignment="Bottom"></StackPanel>
                        <StackPanel x:Name="ResourceStructures" Orientation="Vertical" VerticalAlignment="Bottom"></StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Bottom">
                        <StackPanel x:Name="GuildStructures" Orientation="Vertical" VerticalAlignment="Bottom"></StackPanel>
                        <StackPanel x:Name="ScienceStructures" Orientation="Vertical" VerticalAlignment="Bottom"></StackPanel>
                        <StackPanel x:Name="MilitaryStructures" Orientation="Vertical" VerticalAlignment="Bottom"></StackPanel>
                        <StackPanel x:Name="CivilianStructures" Orientation="Vertical" VerticalAlignment="Bottom"></StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical">
                    <Label x:Name="Coins" FontSize="8"></Label>
                    <Label x:Name="PlayerName" FontSize="8"></Label>
                    <Label x:Name="Age1ConflictTokens" FontSize="8"></Label>
                    <Label x:Name="Age2ConflictTokens" FontSize="8"></Label>
                    <Label x:Name="Age3ConflictTokens" FontSize="8"></Label>
                    <Label x:Name="LossTokens" FontSize="8"></Label>
                </StackPanel>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="4*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Image Grid.Row="0" x:Name="PlayerBoard" Stretch="Fill" />
                    <Grid Grid.Row="1">
                        <Grid x:Name="WonderStage"/>
                        <!-- Grid size created programmatically depending on the number of wonder stages the board has. -->
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
