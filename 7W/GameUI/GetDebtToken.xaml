<Window x:Class="SevenWonders.GetDebtToken"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SevenWonders"
        mc:Ignorable="d"
        Title="Debt repayment" Height="300" Width="300">
    <Grid>
        <Label Name="lblMessageToPlayer" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Margin="10,10,10,108" Height="151" Width="272"/>
        <Button x:Name="OK" Content="OK" HorizontalAlignment="Left" Margin="208,239,0,0" VerticalAlignment="Top" Width="75" Click="btnOK_Click"/>
        <Slider x:Name="sliderResponse" HorizontalAlignment="Left" Margin="100,195,0,0" VerticalAlignment="Top" Width="100" Height="36" IsSnapToTickEnabled="True" ValueChanged="sliderResponse_ValueChanged" TickPlacement="BottomRight"/>
        <Label Content="Treasury" HorizontalAlignment="Left" Margin="10,166,0,0" VerticalAlignment="Top"/>
        <Label Content="Debt tokens" HorizontalAlignment="Left" Margin="208,166,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblCoins" HorizontalAlignment="Left" Margin="34,200,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblDebt" HorizontalAlignment="Left" Margin="217,200,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
