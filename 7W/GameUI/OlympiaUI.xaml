<Window x:Class="SevenWonders.OlympiaUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Play structure for free" Height="314" Width="486">
    <Grid>
        <Image Height="185" HorizontalAlignment="Left" Margin="42,48,0,0" Name="cardImage" Stretch="Fill" VerticalAlignment="Top" Width="139" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="241,48,0,0" Name="cardComboBox" VerticalAlignment="Top" Width="192" SelectionChanged="cardComboBox_SelectionChanged" />
        <Button Content="Confirm" Height="23" HorizontalAlignment="Left" Margin="241,215,0,0" Name="confirmButton" VerticalAlignment="Top" Width="75" Click="confirmButton_Click" IsEnabled="False" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Right" Margin="0,215,31,0" Name="cancelButton" VerticalAlignment="Top" Width="75" Click="cancelButton_Click" />
    </Grid>
</Window>
