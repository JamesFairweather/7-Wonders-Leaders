<Window x:Class="SevenWonders.JoinTableUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Join Table" Height="152" Width="289" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush />
    </Window.Background>
    <Grid Width="275" Height="117">
        <Grid.Background>
            <ImageBrush ImageSource="../Resources/Images/background.jpg" />
        </Grid.Background>
        <Label Content="Server IP" Height="28" VerticalAlignment="Top" Margin="12,10,0,0" HorizontalAlignment="Left" Width="62" />
        <Label Content="User Name" Height="30" HorizontalAlignment="Left" Margin="12,42,0,0" VerticalAlignment="Top" Width="74" />
        <TextBox Height="28" HorizontalAlignment="Left" Margin="93,10,0,0" Name="ipAddressText" VerticalAlignment="Top" Width="172" Text="192.168.0.13" />
        <TextBox Height="28" HorizontalAlignment="Left" Margin="93,43,0,0" Name="textUser" VerticalAlignment="Top" Width="172" KeyDown="textUser_KeyDown" Text="James"/>
        <Button Height="23" HorizontalAlignment="Left" Margin="198,84,0,10" Width="67" Click="btnJoin_Click" Content="OK"/>
    </Grid>
</Window>
